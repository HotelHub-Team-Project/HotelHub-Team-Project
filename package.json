{
  "name": "hotelhub-team-project",
  "version": "1.0.0",
  "description": "호텔 예약 플랫폼",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "keywords": [
    "hotel",
    "booking",
    "reservation",
    "payment"
  ],
  "author": "kbusunho",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
